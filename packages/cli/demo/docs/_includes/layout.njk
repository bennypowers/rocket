<!doctype html>
<html lang="en">

  <head>
    <link rel="stylesheet" href="/_assets/styles.css">
  </head>

  <body>
    <div id="wrapper">
      <main>
        {{ content.html | safe }}
      </main>

      <header>
        Logo
      </header>

      <div id="sidebar">
        <nav>
          <rocket-navigation>
            {{ collections.all | eleventyNavigation | eleventyNavigationToHtml({
              listItemClass: "menu-item",
              activeListItemClass: "current",
              activeKey: eleventyNavigation.key
          }) | safe }}
          </rocket-navigation>
        </nav>

      </div>

      <footer>
        About
      </footer>
    </div>

    {% if content.jsCode %}
      <script type="module">
        {{ content.jsCode | safe }}
      </script>
    {% endif %}

    <script type="module">
      import '@dakmor/navigation/rocket-navigation.js';
    </script>
  </body>

</html>
