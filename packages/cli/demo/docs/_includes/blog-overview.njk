<!doctype html>
<html lang="en">
  <head>
    {% include 'partials/head-content.njk' %}
    <link rel="stylesheet" href="/_assets/layout.css">
    <link rel="stylesheet" href="/_assets/code.css">
  </head>
  <body layout="home">
    {% include 'partials/header.njk' %}

    <div id="content-wrapper">
      <div class="content-area">
        <main>
          {% for post in posts %}
            <article>
              <h1>
                <a href="{{ post.url | url }}">{{ post.data.title }}</a>
              </h1>
              {{ post.date }}
            </article>
          {% endfor %}
        </main>
      </div>
    </div>

    {% include 'partials/footer.njk' %}

    {% include 'partials/pageJs.njk' %}
  </body>
</html>
